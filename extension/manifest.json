{
    "manifest_version": 3,
    "name": "Multi-Platform Profile Scraper",
    "version": "1.0.0",
    "description": "Capture LinkedIn and Instagram profile HTML and send to backend for scraping",
    "permissions": [
      "activeTab",
      "tabs",
      "scripting"
    ],
    "host_permissions": [
      "https://www.linkedin.com/*",
      "https://www.instagram.com/*"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background/background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.linkedin.com/*",
          "https://www.instagram.com/*"
        ],
        "js": ["content/content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }